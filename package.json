{
  "name": "remote-controller",
  "version": "1.0.0",
  "description": "Remote controller application built with Bun, socket.io and a custom library for remote control with no c++ dependencies.",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"bun index.ts --dev\"",
    "backend": "bun index.ts",
    "frontend": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "build:exe": "vite build && bun build-bun"
  },
  "keywords": [],
  "author": "Sergio Lara Guardiola",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/local-notifications": "^7.0.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "type": "module",
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@types/bun": "^1.3.0",
    "concurrently": "^9.2.1",
    "vite": "^6.0.5"
  }
}
